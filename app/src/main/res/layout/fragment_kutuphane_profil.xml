<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="kutuphaneRes"
            type="com.sametozkan.kutuphane.data.dto.response.KutuphaneRes" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray">

        <ImageView
            android:layout_width="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="150dp"
            android:id="@+id/kutuphaneIcon"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toTopOf="@id/bilgiler"
            android:src="@drawable/library_svgrepo_com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:id="@+id/bilgiler"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kutuphaneIcon"
            android:orientation="vertical">

            <TextView
                style="@style/HeadlineText"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corners"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Bilgiler" />

            <TextView
                android:id="@+id/kutuphaneAdiTv"
                style="@style/BodyText"
                android:layout_width="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="@{kutuphaneRes.adi}"
                tools:text="Kütüphane Adı" />

            <TextView
                android:id="@+id/kutuphaneAdresiTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@{kutuphaneRes.adresi}"
                style="@style/BodyText"
                tools:text="Kütüphane Adresi" />

            <TextView
                android:id="@+id/kutuphaneEmailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@{kutuphaneRes.account.email}"
                style="@style/BodyText"
                tools:text="kutuphane@example.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@{`Teslim süresi: ` + String.valueOf(kutuphaneRes.teslimSuresi)}"
                style="@style/BodyText"
                tools:text="Teslim Süresi: 7 gün" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="@{`Kitap sayısı: ` + String.valueOf(kutuphaneRes.kitaplar.size())}"
                style="@style/BodyText"
                tools:text="Kitap Sayısı: 50" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>