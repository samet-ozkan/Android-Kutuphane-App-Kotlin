<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="kutuphaneRes"
            type="com.sametozkan.kutuphane.data.dto.response.KutuphaneRes" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kutuphaneAdiTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{kutuphaneRes.adi}"
            android:textSize="17sp"
            tools:text="Kütüphane Adı" />

        <TextView
            android:id="@+id/kutuphaneAdresiTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{kutuphaneRes.adresi}"
            android:textSize="17sp"
            tools:text="Kütüphane Adresi" />

        <TextView
            android:id="@+id/kutuphaneEmailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{kutuphaneRes.account.email}"
            android:textSize="17sp"
            tools:text="kutuphane@example.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Teslim süresi: ` + String.valueOf(kutuphaneRes.teslimSuresi)}"
            android:textSize="17sp"
            tools:text="Teslim Süresi: 7 gün" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Kitap sayısı: ` + String.valueOf(kutuphaneRes.kitaplar.size())}"
            android:textSize="17sp"
            tools:text="Kitap Sayısı: 50" />

    </LinearLayout>
</layout>