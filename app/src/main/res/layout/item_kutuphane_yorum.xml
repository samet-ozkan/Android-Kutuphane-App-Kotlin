<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="kutuphaneYorumRes"
            type="com.sametozkan.kutuphane.data.dto.response.KutuphaneYorumRes" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{kutuphaneYorumRes.kullanici.adi + ` ` + kutuphaneYorumRes.kullanici.soyadi}"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:hint="Samet Ozkan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{kutuphaneYorumRes.yorum}"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:hint="Yorum buraya yazÄ±lacak" />
    </LinearLayout>
</layout>