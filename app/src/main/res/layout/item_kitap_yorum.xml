<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="kitapYorumRes"
            type="com.sametozkan.kutuphane.data.dto.response.KitapYorumRes" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/rounded_corners_stroke"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_24" />

            <TextView
                style="@style/SubtitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:padding="5dp"
                android:text="@{`#` + kitapYorumRes.kullanici.id + ` ` + kitapYorumRes.kullanici.adi + ` ` + kitapYorumRes.kullanici.soyadi}"
                tools:hint="#23 Samet Ozkan" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/spoilerLayout"
                android:visibility="@{kitapYorumRes.spoiler ? View.VISIBLE : View.INVISIBLE}"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_warning_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="Bu yorum spoiler içermektedir."
                    style="@style/CaptionText"/>

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/spoilerGosterButton"
                    android:layout_height="wrap_content"
                    android:text="Göster"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    style="@style/KullaniciButton"/>
            </LinearLayout>

            <TextView
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:id="@+id/yorumTextView"
                android:visibility="@{kitapYorumRes.spoiler ? View.INVISIBLE : View.VISIBLE}"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="10dp"
                android:text="@{kitapYorumRes.yorum}"
                tools:hint="Yorum buraya yazılacak" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>