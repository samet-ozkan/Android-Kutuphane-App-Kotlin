<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>

    </style>

    <style name="KullaniciToolbar" parent="Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="KutuphaneToolbar" parent="Toolbar">
        <item name="android:background">@color/colorPrimaryDarkKutuphane</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corners</item>
    </style>

    <style name="Theme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowBackground">@color/material_dynamic_primary10</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="HeadlineText" parent="Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="SubtitleText" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="BodyText" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="ButtonText" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="CaptionText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="KullaniciButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="KutuphaneButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/colorPrimaryDarkKutuphane</item>
    </style>
    
</resources>